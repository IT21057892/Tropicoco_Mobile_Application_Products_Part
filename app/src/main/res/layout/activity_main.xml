<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:queryHint="Search here......"
        android:background="@drawable/round"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/img_29"
        android:background="#EDEDED"/>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-375dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img"></ImageView>

            <TextView
                android:id="@+id/productName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Liquids"
                android:textColor="@color/black"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/lbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:text="View"
                android:textColor="@color/black"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img_2"></ImageView>

            <TextView
                android:id="@+id/productName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Sweets"
                android:textColor="@color/black"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/sbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:text="View"
                android:textColor="@color/black"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img_3"></ImageView>

            <TextView
                android:id="@+id/productName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Ornaments"
                android:textColor="@color/black"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/obtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-140dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:text="View"
                android:textColor="@color/black"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="660dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img_4"></ImageView>

            <TextView
                android:id="@+id/productName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:text="Others"
                android:textColor="@color/black"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/othbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-86dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="@color/white"
                android:text="View"
                android:textColor="@color/black"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>