<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    tools:context=".Coconut_Oil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:background="#FFAC1C">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="324dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17dp"
            android:background="#FFAC1C"
            android:src="@drawable/img_29" />
    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-307dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_25"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jewellery"
        android:textSize="35dp"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="290dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handcrafted fashion accessories made from coconut shells, fibers, and wood."
        android:textSize="20dp"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="340dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="#D2FBB334"
        android:text="Reviews    ★★★★★"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:strokeColor="#FFAC1C"
        app:strokeWidth="2dp" />

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-246dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roundnew"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:text="      1 Pcs : $5.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="50dp"
                android:text="      3 Pcs : $10.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="100dp"
                android:text="      5 Pcs : $15.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="-390dp"
        android:layout_marginTop="750dp"
        android:backgroundTint="#FFAC1C"
        android:text="Add To Cart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="750dp"
        android:backgroundTint="#FFAC1C"
        android:text="Buy Now"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp" />

</LinearLayout>